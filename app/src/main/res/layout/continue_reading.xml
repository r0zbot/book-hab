<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:showIn="@layout/content_main"
        android:orientation="vertical"
        >

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >
        <ImageView
                android:id="@+id/book_cover"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/senhor"
                />
        <TextView
                android:id="@+id/book_label"
                android:paddingTop="@dimen/main_text_vertical_margin"
                app:layout_constraintLeft_toRightOf="@id/book_cover"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O senhor dos anais"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/book_cover"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/book_label"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="60sp"
                android:fontFamily="sans-serif-thin"
                android:text="69%"
                />
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar lendo"
            android:textSize="@dimen/big_text_size"
            android:paddingLeft="@dimen/main_text_horizontal_margin"
            android:paddingTop="@dimen/main_text_vertical_margin"
            android:paddingBottom="@dimen/main_text_vertical_margin"
            android:textStyle="italic"
            android:background="@color/very_light_gray"
            />

</LinearLayout>