<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        tools:showIn="@layout/content_main"
        android:weightSum="2"
        android:orientation="horizontal"
        >

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        <TextView
                android:id="@+id/time_label"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tempo"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                />
        <TextView
                android:id="@+id/time_value"
                app:layout_constraintTop_toBottomOf="@id/time_label"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="17 min"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/stat_val_margin_bottom"
                />
        <TextView
                android:id="@+id/stats_time_fa_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/time_label"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/time_value"
                android:layout_marginLeft="4dp"
                android:textSize="30dp"
                android:text="@string/fa_angle_down"
                android:textColor="@color/red"
                android:layout_marginBottom="@dimen/stat_val_margin_bottom"
                />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
    >
        <TextView
                android:id="@+id/strike_label"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Strike"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                />
        <TextView
                android:id="@+id/strike_value"
                app:layout_constraintTop_toBottomOf="@id/strike_label"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="7d"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/stat_val_margin_bottom"
                />
        <TextView
                android:id="@+id/stats_strike_fa_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/strike_label"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/strike_value"
                android:layout_marginLeft="4dp"
                android:textSize="30dp"
                android:layout_marginBottom="@dimen/stat_val_margin_bottom"
                android:text="@string/fa_trophy"
                android:textColor="#ffbf2b"
                />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>